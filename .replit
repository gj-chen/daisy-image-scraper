entrypoint = "run_once.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python run_once.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Run"
author = 28026932
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_once.py"

[[workflows.workflow]]
name = "Dev"
author = 28026932
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_worker.py --concurrency=8 -n worker1@%h"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dispatcher.py 0"

[[workflows.workflow]]
name = "DevDistributed"
author = 28026932
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_worker.py --concurrency=8 -n worker1@%h"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_worker.py --concurrency=8 -n worker2@%h"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dispatcher.py 0"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dispatcher.py 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dispatcher.py 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dispatcher.py 3"
