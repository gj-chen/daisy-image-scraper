entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python run_scraper.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]

[[workflows.workflow]]
name = "Run Flask"
author = 28026932
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --workers 4 --timeout 180 --graceful-timeout 120 --bind 0.0.0.0:5000 main:app"

[[workflows.workflow]]
name = "Run Scraper"
author = 28026932
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_scraper.py"

[[workflows.workflow]]
name = "Monitor"
author = 28026932
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python monitor.py"
